

<div class="banner-home">
  <div class="banner-objects">
    <h1 id="banner-slogan">Browse and share the best itineraries</h1>
    <form action="/itineraries">
      <div class="banner-search">
        <input list="datalistOptions" id="search-bar" type="text" placeholder="Where do you plan to go?" name="query">
        <button id="search-submit-btn" type="submit"><i class="fas fa-search"></i></button>
      </div>
    </form>
  </div>
</div>

<div class="home">
  <h1 class="home-header">Trendy routes</h1>
  <div class="container">
    <div class="row">
      <% @itineraries.each do |itinerary| %>
        <div class="col-4">
          <div class="card">
            <div class="cardbanner">
              <span><%= itinerary.title %></span>
            </div>
            <div class="card-infos">
              <div class="card-infos-1">
                <h4><%= itinerary.countries.map{|country| country.name}.uniq.join(" - ") %></h4>
                <div class="cards-tag">
                  Tag 1 Tag 2 Tag 3
                </div>
              </div>
              <div class="card-infos-2">
                <h6><%= itinerary.days.map{|day| day.city}.uniq.join(", ") %></h6>
                <h5><%= itinerary.days.count %> DAYS</h5>
              </div>
              <div class="card-infos-3">
                <span class="fa-layers fa-fw">
                  <i class="fas fa-heart"></i>
                  <span class="fa-layers-text fa-inverse" data-fa-transform="shrink-5 right-7" style="font-weight:700">
                    1
                  </span>
                </span>
                <img class="avatar-bordered" alt="avatar-bordered" src="https://kitt.lewagon.com/placeholder/users/sarahlafer" />
              </div>
            </div>
            <%= link_to "", itinerary_path(itinerary), class: "stretched-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

