<% if @itinerary.user != current_user && @itinerary.user.likes?(@itinerary) == false %>
  <%= form_with url: "/likes", method: :post do |form| %>
    <%= form.hidden_field :itinerary_id, value: @itinerary.id %>
    <%= form.submit "like" %>
  <% end %>
<% elsif @itinerary.user != current_user && @itinerary.user.likes?(@itinerary) == true %>
  <%= form_with url: "/unlikes", method: :post do |form| %>
    <%= form.hidden_field :itinerary_id, value: @itinerary.id %>
    <%= form.submit "unlike" %>
  <% end %>
<% end %>


