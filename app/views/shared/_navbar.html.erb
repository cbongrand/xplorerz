<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "logo.png", class: "navbar-logo" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item itin-create"><%= link_to "Publish itinerary", new_itinerary_path(@itinerary)%></li>
          <li class="nav-item dropdown">
          <% if current_user.photo.present? %>
            <%= cl_image_tag current_user.photo.key, class: "navbar-avatar dropdown-toggle avatar-navbar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", "/profile", class: "dropdown-item" %>
            <%= link_to "Create itinerary", new_itinerary_path(@itinerary), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
      <div class="nav-buttons">
        <%= link_to "Log in", new_user_session_path, class:"btn button-1"%>
        <%= link_to "Sign up", new_user_registration_path, class:"btn button-2"%>
      </div>
      <% end %>
    </ul>
  </div>
</div>
